<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:id="@+id/scrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imgProduct"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:src="@drawable/dress1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-100dp"
            android:layout_below="@+id/imgProduct"
            android:orientation="vertical"
            android:background="@drawable/detail_page_bg">

            <TextView
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/leckerli_one"
                android:text="Cherry Wedding Dress"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:fontFamily="@font/leckerli_one"
                android:text="$ 2000"
                android:textColor="#42995C"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/aclonica"
                android:lineSpacingExtra="2dp"
                android:text="Sequins are the ideal detail for the bride seeking to add a little sparkle to her gown. Create a subtle effect with smaller, lighter colored sequins, or make a statement with larger, darker sequins. Perfect for the bride with a dazzling personality."
                android:textColor="@android:color/background_dark" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_minus" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="50dp"
                        android:layout_height="53dp"
                        android:fontFamily="@font/leckerli_one"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_plus" />
                </LinearLayout>

                <Button
                    android:id="@+id/button2"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/selectedIconColor"
                    android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                    android:fontFamily="@font/leckerli_one"
                    android:padding="16dp"
                    android:text="Add to Cart"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>



